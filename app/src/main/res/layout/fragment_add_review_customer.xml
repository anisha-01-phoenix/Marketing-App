<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.addReviewCustomer">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/review"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ratingBar"
        android:layout_margin="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/theme"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="3dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text"
            android:hint="Reviews About the Product/Shop"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/dark" />

    </com.google.android.material.textfield.TextInputLayout>


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="@color/color2"
        android:rating="2.5"
        android:stepSize="01" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_baseline_star_rate_24"
        android:drawableTint="@color/white"
        android:fontFamily="@font/button"
        android:padding="8dp"
        android:text=" Rate Us"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>