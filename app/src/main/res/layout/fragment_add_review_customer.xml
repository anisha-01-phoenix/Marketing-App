<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".customer.addReviewCustomer">

    <EditText
        android:id="@+id/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:hint="Enter the Order ID..."
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:textColor="@color/dark"
        android:textSize="18dp"
        android:fontFamily="@font/headings"
        android:textColorHint="@color/light"
        android:background="@drawable/shopbuttonwhite"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/orderid">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/review"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/theme2"
            app:boxStrokeErrorColor="@color/error"
            app:boxStrokeWidth="3dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/text"
                android:hint="Reviews"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/dark" />

        </com.google.android.material.textfield.TextInputLayout>
    </ScrollView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:text="Add Reviews"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:padding="8dp"
        android:textSize="18dp"
        android:fontFamily="@font/button"
        android:textColor="@color/white" />

</RelativeLayout>