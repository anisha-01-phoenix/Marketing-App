<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8C8D8"
    tools:context=".customer.shops_items">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutbg"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">


        <Button
            android:id="@+id/shopProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/shopbuttonwhite"
            android:text="Products"
            android:textColor="#A62121"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shopReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/shopbuttonred"
            android:text="Reviews"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/shopContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll"
        android:layout_below="@id/linearLayout"
        tools:layout_editor_absoluteX="0dp">


    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layoutbg"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/checkCart"
            android:layout_width="147dp"
            android:layout_height="74dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shopbuttonred"
            android:padding="10dp"
            android:text="Check Cart"
            android:textColor="@color/white"
            android:textSize="19sp"

            android:textStyle="bold" />

        <Button
            android:layout_width="147dp"
            android:layout_height="74dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shopbuttonred"
            android:padding="10dp"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>