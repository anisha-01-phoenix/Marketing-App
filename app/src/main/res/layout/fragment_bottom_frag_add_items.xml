<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".shopkeeper.bottom_frag_add_items">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageadded"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/uploadNow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_upload_24"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/prodnamefrag"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/theme2"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="3dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text"
            android:hint="Product Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/dark" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addprodimg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="9dp"
        android:background="@drawable/otp"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:drawableTint="@color/theme"
        android:fontFamily="@font/text"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=" Add Product Image"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/dark" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/proddesc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/theme2"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="3dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text"
            android:hint="Product Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/dark" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/prodqtavailable"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/theme2"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="3dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text"
            android:hint="Product Quantity Available"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/dark" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/prodprice"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/theme2"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="3dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text"
            android:hint="Product Price"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/dark" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/prodofferprice"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/theme2"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="3dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text"
            android:hint="Offer Price (in %)"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/dark" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addprodcts_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:drawableTint="@color/white"
        android:padding="8dp"
        android:text="   ADD TO MY SHOP RECORDS  "
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>